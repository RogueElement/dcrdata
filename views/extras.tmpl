    <style>
        html {
            color: #5f5f5f;
        }
        .top-nav {
            background: #3B3F45;
        }
        .top-nav a{
            color: white;
        }
        h4 {
            margin-top: 10px;
        }
        .hash {
            font-family: monospace;
            display: inline-block;
            word-wrap: break-word;
            transition: .133s transform;
        }
        .table th {
            font-size: 12px;
        }
        .table td {
            height: 36px;
            font-size: 12px;
            vertical-align: middle;
        }
        .hash.collapse {
            font-size: 10px;
            display: inline-block;
            width: 198px;
        }
        @media only screen and (max-width: 940px)  {
            .hash.collapse {
                font-size: 10px;
                width: 142px;
            }
        }
        @media only screen and (max-width: 768px)  {
            .hash.collapse {
                font-size: 12px;
            }
            .table {
                margin-bottom: 0;
                width: 100%;
            }
            .table td:first-child {
                width: 140px;
            }
        }
        @media only screen and (max-width: 630px)  {
            .table .hash {
                font-size: 10px;
                width: 198px;
            }
        }
    </style>

